{
    "name": "Laravel blade/livewire language server",
    "version": "1.2.0",
    "description": "Laravel blade and livewire language server",
    "main": "lib/extension.js",
    "publisher": "haringsbe-haringsrob",
    "engines": {
        "vscode": "^1.43.0"
    },
    "keywords": [
        "vscode",
        "php",
        "laravel",
        "blade",
        "livewire"
    ],
    "scripts": {
        "clean": "rimraf lib",
        "build": "tsc -p tsconfig.json",
        "prepare": "yarn clean && yarn build",
        "vscode:prepublish": "npm run esbuild-base -- --minify",
        "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=out/main.js --external:vscode --format=cjs --platform=node",
        "package": "npm run clean && npm run build && vsce package"
    },
    "activationEvents": [
        "onLanguage:php",
        "onLanguage:blade"
    ],
    "author": "haringsrob@gmail.com",
    "devDependencies": {
        "@chemzqm/tsconfig": "^0.0.3",
        "@chemzqm/tslint-config": "^1.0.18",
        "@types/node": "^11.13.10",
        "@types/vscode": "1.43.0",
        "esbuild": "^0.14.24",
        "rimraf": "~3.0.2",
        "ts-loader": "~8.0.2",
        "tslint": "^5.16.0",
        "typescript": "~3.9.7",
        "vscode-test": "~1.4.0",
        "webpack": "^4.34.0",
        "webpack-cli": "^3.3.4"
    },
    "dependencies": {
        "vscode-languageclient": "^6.1.3",
        "tslib": "^2.3.1"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/haringsrob/laravel-dev-tools"
    }
}